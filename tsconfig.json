{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnreachableCode": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "*": ["types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "typings.d.ts", "test/**/*"]
}
